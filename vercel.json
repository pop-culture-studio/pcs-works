{
    "regions": [
        "hnd1"
    ],
    "functions": {
        "/api/index.php": {
            "runtime": "vercel-php@0.4.0"
        },
        "/public/**": {
            "runtime": "vercel-php@0.4.0"
        }
    },
    "rewrites": [
        { "source": "/(css|js|images)/(.*)", "destination": "/public/$1/$2" },
        { "source": "/favicon.ico", "destination": "/public/favicon.ico" },
        { "source": "/robots.txto", "destination": "/public/robots.txt" },
        { "source": "/(.*)", "destination": "/api/index.php" }
    ],
    "env": {
        "APP_NAME": "SDS Works",
        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "LIVEWIRE_MANIFEST_PATH": "/tmp/livewire-components.php",
        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie",
        "SESSION_COOKIE": "sds_works_session",
        "VIEW_COMPILED_PATH": "/tmp"
    }
}